RewriteEngine On

# Bỏ qua nếu là file hoặc thư mục tồn tại
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# Gửi mọi request vào index.php và giữ nguyên query string (?id=...)
RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]

